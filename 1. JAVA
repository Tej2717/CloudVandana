


import java.util.Arrays;
import java.util.Collections;

public class Main {

    public static void main(String[] args) {
        int[] myArray = {1, 2, 3, 4, 5, 6, 7};
        Collections.shuffle(Arrays.asList(myArray));
        System.out.println("Shuffled Array:");
        for (int i : myArray)
            System.out.print(i + " ");
    }
}

